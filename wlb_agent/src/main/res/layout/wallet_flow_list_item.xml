<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_ym"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="17dp"
        android:gravity="center_vertical"
        android:text="2016年8月8日"
        android:textColor="@color/c_9ca3b3"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/flow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车险佣金"
                android:textColor="@color/c_4a4a4a"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/flow_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="03-16 20:88"
                android:textColor="@color/c_d6d7d9"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/flow_money_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/c_ffac66"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/common_red"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/flow_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/c_9d9d9d"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_line1" />

</LinearLayout>