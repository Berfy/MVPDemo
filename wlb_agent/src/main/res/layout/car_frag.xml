<?xml version="1.0" encoding="utf-8"?>
<com.wlb.agent.ui.common.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/c_e7e7e7">

        <EditText
            android:id="@+id/seek_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/insurance_seek"
            android:drawableLeft="@drawable/seek"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="请输入车牌、车主名称进行搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="23dp"
            android:singleLine="true"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/carlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="82%" />

    <TextView
        android:id="@+id/btn_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/c_e7e7e7"
        android:gravity="center"
        android:text="排序筛选"
        android:textColor="@drawable/btn_insurance_ordercolor_selector"
        android:textSize="14sp"
        app:layout_heightPercent="8%" />
</com.wlb.agent.ui.common.view.PercentLinearLayout>