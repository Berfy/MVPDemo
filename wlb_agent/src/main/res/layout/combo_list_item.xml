<!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/extra_value_meal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_realAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/c_b81c22"
                tools:text="￥69"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/item_originAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:textColor="@color/c_9fa0a0"
                tools:text="原价99"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="12dp"
                android:text="查看详情>>"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/imaginary_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="21dp">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_393939"
                android:layout_marginTop="22dp"
                tools:text="3次轻松代驾"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/item_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="13dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@drawable/select_scheme_icon" />

            <TextView
                android:id="@+id/item_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_name"
                android:layout_marginTop="5dp"
                android:textColor="@color/c_9fa0a0"
                android:layout_marginRight="5dp"
                tools:text="规则：3次上门代驾"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/item_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_rule"
                android:layout_marginTop="3dp"
                android:textColor="@color/c_9fa0a0"
                tools:text="有效期至 2017-01-01"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/order_detail_pay_car" />

            <ImageView
                android:id="@+id/item_serviceCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/combo_phone"
                android:padding="7dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout><!--
</LinearLayout>-->
