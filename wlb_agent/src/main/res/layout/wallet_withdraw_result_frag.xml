<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/success_withdraw" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/fail_withdraw"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="申请成功"
            android:textColor="@color/c_87cb68"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="申请失败"
            android:textColor="@color/c_aaaaaa"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/success_withdraw_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="预计5个工作日到账，如有问题请联系客服12345"
            android:textColor="@color/c_bebebe"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="目前无法提现，请20号以后再进行操作"
            android:textColor="@color/c_bebebe"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/withdraw_result_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_login_selector"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>