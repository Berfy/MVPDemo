<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@drawable/ic_underwrite_submit_suc_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/order_submit_suc"
            android:textColor="@color/common_text"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_order_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/btn_login_selector"
                android:text="@string/order_list"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/btn_order_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/btn_white_selector"
                android:text="@string/order_detail"
                android:textColor="@color/common_text"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hotline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_car_info_hot_line_title"
            android:textColor="@color/offer_confirm_car_info_hotline"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_hotline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/about_phone"
            android:textColor="@color/offer_confirm_car_info_hotline"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>