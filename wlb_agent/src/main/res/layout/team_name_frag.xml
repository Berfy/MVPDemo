<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/c_e9e9e9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/team_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/c_393939"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp" />

        <EditText
            android:id="@+id/team_create_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/team_tex"
            android:layout_centerVertical="true"
            android:hint="请输入2-20位数字或中文名称"
            android:textSize="@dimen/sp_11"
            android:background="@null"
            android:textColor="@color/c_393939" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_dbdfe2" />

    <Button
        android:id="@+id/submit"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:text="保存"
        android:textColor="@color/c_b81c22"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_fb_btn_bg" />

</LinearLayout>