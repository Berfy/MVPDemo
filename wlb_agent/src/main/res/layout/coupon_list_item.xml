<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/user_favorable_ticket_back"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="28dp"
            android:text="￥20"
            android:textColor="@color/c_b81c22"
            android:textSize="@dimen/sp_17" />

        <RelativeLayout
            android:id="@+id/ticket_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@id/item_money">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="车险现金券"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_name"
                android:layout_below="@id/item_name"
                android:layout_marginTop="10dp"
                android:text="有效期"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/item_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/select_scheme_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticket_banner"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/c_9fa0a0"
            android:text="afsafas"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
</LinearLayout>