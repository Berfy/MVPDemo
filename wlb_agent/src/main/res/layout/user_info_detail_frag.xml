<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/c_e7e7e7"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="设置名片"
            android:textColor="#727171"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:id="@+id/user_head_banner"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <common.widget.imageview.CircleImageView
                android:id="@+id/user_head_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/arrow1"
                android:src="@drawable/sliding_head" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:text="头像"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/nickName_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:text="昵称"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/user_nickName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/user_detial_ml"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入昵称"
                android:singleLine="true"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/city_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:text="所在城市"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/select_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/user_detial_ml"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="未选择"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/realName_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:text="实名认证"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/real_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/user_detial_ml"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="未选择"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/user_email_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="邮箱"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/user_detial_ml"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_13" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/c_e7e7e7"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="设置账户信息"
            android:textColor="#727171"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:id="@+id/user_phone_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="手机号码"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/user_detial_ml"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/bindWX_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:text="微信"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/wx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/user_detial_ml"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="未绑定"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/bindQQ_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:text="QQ"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/qq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="未绑定"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/bindSina_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:text="微博"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

            <TextView
                android:id="@+id/sina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/user_detial_ml"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="未绑定"
                android:textColor="@color/c_9fa0a0"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line1" />

        <RelativeLayout
            android:id="@+id/changePassword_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="修改密码"
                android:textColor="@color/c_393939"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_arrow_right"
                android:src="@drawable/user_arrow_right" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>