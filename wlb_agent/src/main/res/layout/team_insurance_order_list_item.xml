<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/carName_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="张三-京A88888"
            android:textColor="@color/c_393939"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_dbdfe2" />

    <RelativeLayout
        android:id="@+id/insurance_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/insurance_type_banner"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white">


            <ImageView
                android:id="@+id/company_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/company_icon">

                <TextView
                    android:id="@+id/compulsory_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:text="交强险合计"
                    android:textColor="@color/c_525252"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/commerce_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/compulsory_tex"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:text="商业险合计"
                    android:textColor="@color/c_525252"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/compulsory_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/compulsory_tex"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="88.88元"
                    android:textColor="@color/c_525252"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/commerce_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/commerce_tex"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="88.88元"
                    android:textColor="@color/c_525252"
                    android:textSize="@dimen/sp_13" />


            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/insurance_type_banner"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/c_dbdfe2" />


        <RelativeLayout
            android:id="@+id/date_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:background="@color/white"
            android:minHeight="50dp">

            <TextView
                android:id="@+id/enrollDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="2016-06-20"
                android:textColor="#979797"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/total_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="888.88元"
                android:textColor="@color/c_cb5959"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/total_out"
                android:text="总计："
                android:textColor="@color/c_525252"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd" />

    <Button
        android:id="@+id/reminder_but"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_fb_btn_bg"
        android:text="催单"
        android:layout_marginBottom="20dp"
        android:textColor="@color/c_b81c22" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd" />
</LinearLayout>