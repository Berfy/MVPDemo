<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translate_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_shape_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/bg_shape_top_circle_gray"
                android:paddingRight="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/wallet_input_withdrawal_pwd"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/sp_16" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/delete_phone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/common_line1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pwd1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shape_line_gray"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/tv_pwd2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shape_line_gray"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/tv_pwd3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shape_line_gray"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/tv_pwd4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shape_line_gray"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/tv_pwd5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shape_line_gray"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/tv_pwd6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shape_line_gray"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_30" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/wallet_input_withdrawal_pwd_tip1"
                    android:textColor="@color/common_text_gray"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_modify_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/wallet_input_withdrawal_pwd_tip2"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/common_text_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_leftbottom_gray_selector"
                    android:text="@string/cancel"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/common_text_gray" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_rightbottom_gray_selector"
                    android:text="@string/sure"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <com.wlb.agent.ui.common.view.Pwd6KeyBorad
        android:id="@+id/pwd6KeyBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></com.wlb.agent.ui.common.view.Pwd6KeyBorad>
</RelativeLayout>