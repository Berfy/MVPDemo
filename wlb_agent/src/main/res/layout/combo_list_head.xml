<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="套餐使用人"
        android:textColor="@color/c_393939"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:drawableLeft="@drawable/btn_claim_scheme_selector"
            android:drawablePadding="8dp"
            android:text="车主"
            android:textColor="@color/c_393939"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:drawableLeft="@drawable/btn_claim_scheme_selector"
            android:drawablePadding="8dp"
            android:text="投保人"
            android:textColor="@color/c_393939"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:drawableLeft="@drawable/btn_claim_scheme_selector"
            android:drawablePadding="8dp"
            android:text="被保险人"
            android:textColor="@color/c_393939"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/btn_claim_scheme_selector"
            android:drawablePadding="8dp"
            android:text="其他使用人"
            android:textColor="@color/c_393939"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/banner1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/c_9fa0a0"
            android:textSize="@dimen/sp_13" />

        <ImageButton
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="5dp"
            android:focusable="false"
            android:src="@drawable/w_add" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_add"
            android:background="@drawable/shape_insurance_detail_idcard"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColor="@color/c_9fa0a0"
            android:paddingLeft="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banner2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份证号"
            android:textColor="@color/c_9fa0a0"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/et_icard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:background="@drawable/shape_insurance_detail_idcard"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColor="@color/c_9fa0a0"
            android:paddingLeft="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banner3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机证号"
            android:textColor="@color/c_9fa0a0"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:background="@drawable/shape_insurance_detail_idcard"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColor="@color/c_9fa0a0"
            android:paddingLeft="5dp" />
    </RelativeLayout>
</LinearLayout>