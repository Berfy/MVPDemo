<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_e7e7e7"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/fb_content"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shape_fb_input_bg"
            android:gravity="center"
            android:hint="说说您遇到的问题，或者对我们的建议吧~"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="12dp"
            android:textColorHint="@color/fb_subject_color"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/fb_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_fb_input_bg"
            android:gravity="center_vertical"
            android:hint="E-mail / QQ"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColorHint="@color/fb_subject_color"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape_fb_btn_bg"
            android:text="提交反馈"
            android:textColor="@color/c_b81c22"
            android:textSize="@dimen/sp_17"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>